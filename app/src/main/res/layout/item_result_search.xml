<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="9.5dp"
    android:layout_marginRight="19.dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/background_result_search">

    <ImageView
        android:id="@+id/imgCompanyResult"
        android:layout_width="105dp"
        android:layout_height="80dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.5dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/company_result_search"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCompanyResult"
        app:layout_constraintTop_toTopOf="@id/imgCompanyResult" />

    <TextView
        android:id="@+id/tvCompanyBusiness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_italic"
        android:textColor="@color/detail_result_search"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCompanyResult"
        app:layout_constraintTop_toBottomOf="@+id/tvCompanyName" />

    <TextView
        android:id="@+id/tvCompanyCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.5dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/detail_result_search"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgCompanyResult"
        app:layout_constraintTop_toBottomOf="@+id/tvCompanyBusiness" />
</androidx.constraintlayout.widget.ConstraintLayout>